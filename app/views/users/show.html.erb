<!-- Showing the user statistics -->

<div class="booyah-box col-10 offset-1">
    <div class="row">
        <div class="col-12 col-sm-4">
            <div class="round-image-100">
                <%= image_tag(current_user.avatar.url(:thumb)) %>
            </div>
        </div>
        <div class="col-12 col-sm-8">
            <h1>My Dashboard</h1>
            <h3><%= @user.email %></h3>
            <h3>Been playing since: <%= @user.created_at.strftime("%B %d, %Y") %></h3>
            <h3>Games Won: <%= @user.games_won %> Games</h3>
            <h3>Games Lost: <%= @user.games_lost %> Games</h3>
        </div>
         
        <div class="clear"></div>
    </div>
    <br />
    <h5 class="text-center"><%= link_to 'Edit Profile',edit_user_registration_path %></h5>
</div>

<br /><br />
<div class="clear"></div>



